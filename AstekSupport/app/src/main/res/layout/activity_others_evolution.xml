<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/titleEvolution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titleEvolution"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="40dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleEvolution"
        android:fillViewport="true"
        >

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/mobility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobilityEvolution"
                android:layout_marginStart="15dp"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/mobilityEditText"
                android:layout_below="@id/mobility"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_outline_enabled"
                android:layout_margin="15dp"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:gravity="top|start"
                tools:ignore="LabelFor"
                />


            <TextView
                android:id="@+id/othersEvolution"
                android:layout_below="@id/mobilityEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/otherEvolution"
                android:layout_marginStart="15dp"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/othersEvolutionEditText"
                android:layout_below="@id/othersEvolution"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_outline_enabled"
                android:layout_margin="15dp"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:gravity="top|start"
                tools:ignore="LabelFor"
                />

            <TextView
                android:id="@+id/others"
                android:layout_below="@id/othersEvolutionEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/others"
                android:layout_marginStart="15dp"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/othersEditText"
                android:layout_below="@id/others"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_outline_enabled"
                android:layout_margin="15dp"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:gravity="top|start"
                tools:ignore="LabelFor"
                />

            <include layout="@layout/page_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/othersEditText"/>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>

