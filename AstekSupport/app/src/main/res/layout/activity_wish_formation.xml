<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/titleWishFormation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titleWishFormation"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleWishFormation"
        android:fillViewport="true"
        >

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">


            <TextView
                android:id="@+id/wish1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/formationWish"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/wishEditText1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/wish1"
                android:background="@drawable/round_outline_enabled"
                android:layout_margin="15dp"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:gravity="top|start"
                android:importantForAutofill="no"
                tools:ignore="LabelFor"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

            <TextView
                android:id="@+id/targetFormation1"
                android:layout_below="@id/wishEditText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/formationTarget"
                android:layout_marginStart="15dp"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/targetFormationEditText1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/targetFormation1"
                android:background="@drawable/round_outline_enabled"
                android:layout_margin="15dp"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:gravity="top|start"
                android:importantForAutofill="no"
                tools:ignore="LabelFor"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

            <TextView
                android:id="@+id/motivation1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/formationMotivation"
                android:layout_marginStart="15dp"
                android:layout_below="@id/targetFormationEditText1"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/motivationEditText1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/motivation1"
                android:background="@drawable/round_outline_enabled"
                android:layout_margin="15dp"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:gravity="top|start"
                android:importantForAutofill="no"
                tools:ignore="LabelFor"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

            <TextView
                android:id="@+id/modality1"
                android:layout_below="@id/motivationEditText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/formationModality"
                android:layout_marginStart="15dp"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/modalityEditText1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/modality1"
                android:background="@drawable/round_outline_enabled"
                android:layout_margin="15dp"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:gravity="top|start"
                android:importantForAutofill="no"
                tools:ignore="LabelFor"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />









            <TextView
                android:id="@+id/wish2"
                android:layout_below="@id/modalityEditText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/formationWish"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/wishEditText2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/wish2"
                android:background="@drawable/round_outline_enabled"
                android:layout_margin="15dp"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:gravity="top|start"
                android:importantForAutofill="no"
                tools:ignore="LabelFor"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="gone"
