<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleSkill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titleBehaviouralSkill"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"/>

    <TextView
        android:id="@+id/skill1"
        android:layout_below="@id/titleSkill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/skillImplication"
        android:textColor="@color/red"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:textSize="23sp"
        android:textAlignment="center"/>

    <include layout="@layout/behaviour_skill_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/skill1"
        />

</RelativeLayout>