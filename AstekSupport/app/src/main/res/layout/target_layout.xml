<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/target1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/target1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/target1EditText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/target1"
            android:background="@drawable/round_outline_enabled"
            android:layout_margin="15dp"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:gravity="top|start"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:id="@+id/result1"
            android:layout_below="@id/target1EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/result1EditText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/result1"
            android:background="@drawable/round_outline_enabled"
            android:layout_margin="15dp"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:gravity="top|start"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />




        <TextView
            android:id="@+id/target2"
            android:layout_below="@id/result1EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/target1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/target2EditText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/target2"
            android:background="@drawable/round_outline_enabled"
            android:layout_margin="15dp"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:gravity="top|start"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/result2"
            android:layout_below="@id/target2EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/result2EditText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/result2"
            android:background="@drawable/round_outline_enabled"
            android:layout_margin="15dp"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:gravity="top|start"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="gone"
            />




        <TextView
            android:id="@+id/target3"
            android:layout_below="@id/result2EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/target1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/target3EditText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/target3"
            android:background="@drawable/round_outline_enabled"
            android:layout_margin="15dp"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:gravity="top|start"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/result3"
            android:layout_below="@id/target3EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/result3EditText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/result3"
            android:background="@drawable/round_outline_enabled"
            android:layout_margin="15dp"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:gravity="top|start"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="gone"
            />


        <include
            layout="@layout/page_add_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/result3EditText"
            >
        </include>

    </RelativeLayout>
</ScrollView>